<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/chatRightMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/message_bubble_right"
        android:gravity="right"
        android:inputType="textMultiLine"
        android:maxEms="13"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:text="TextView"
        android:textColor="@color/color_friend_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chatRightTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="4dp"
        android:text="TextView"
        android:textColor="@color/color_selected_tab"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/chatRightMessage"
        app:layout_constraintRight_toLeftOf="@+id/chatRightMessage" />

    <TextView
        android:id="@+id/chatRightCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="4dp"
        android:text="0"
        android:textColor="@color/color_message_read_or_not"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/chatRightTime"
        app:layout_constraintRight_toLeftOf="@+id/chatRightTime" />
</android.support.constraint.ConstraintLayout>