<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/chatLeftImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/chatLeftMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_bubble_left"
        android:gravity="left"
        android:inputType="textMultiLine"
        android:maxEms="13"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:text="TextView"
        android:textColor="@color/color_friend_text"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/chatLeftName"
        app:layout_constraintLeft_toRightOf="@+id/chatLeftImage"
        android:layout_marginLeft="4dp" />

    <TextView
        android:id="@+id/chatLeftTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="4dp"
        android:text="TextView"
        android:textColor="@color/color_selected_tab"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/chatLeftMessage"
        app:layout_constraintLeft_toRightOf="@+id/chatLeftMessage" />

    <TextView
        android:id="@+id/chatLeftCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="4dp"
        android:text="0"
        android:textColor="@color/color_message_read_or_not"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/chatLeftTime"
        app:layout_constraintLeft_toRightOf="@+id/chatLeftTime" />

    <TextView
        android:id="@+id/chatLeftName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="10sp"
        app:layout_constraintTop_toTopOf="@+id/chatLeftImage"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/chatLeftImage"
        android:layout_marginLeft="4dp" />
</android.support.constraint.ConstraintLayout>